@model LoginViewModel

<div class="row justify-content-md-center">
    <div class="text-center col-md-auto">
        <h1 aria-label="Login title">Login</h1>
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" role="form">
            <input asp-for="Email" placeholder="Email" aria-label="account email" role="textbox" class="form-control" /><br />
            <input asp-for="Password" placeholder="Password" aria-label="password" role="textbox" class="form-control" /><br />
            <button type="submit" aria-label="login" role="button" class="btn btn-primary">Login</button>
        </form>
        <div asp-validation-summary="ModelOnly" aria-label="validation errors" role="region"></div>
    </div>
</div>
